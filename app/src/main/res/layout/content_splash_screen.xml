<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_splash_screen"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.music.clocklive.wallpaper.activities.SplashScreenActivity"
    tools:showIn="@layout/activity_splash_screen">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/ivSplash"
        android:src="@drawable/ic_splash"
        android:layout_height="wrap_content" />
    <com.music.clocklive.wallpaper.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marging_x2largest"
        android:gravity="center"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_xxlarge"
        app:custom_font="avenir_heavy" />

</LinearLayout>
